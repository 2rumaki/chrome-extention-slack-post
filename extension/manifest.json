{
  "manifest_version": 3,
  "name": "Slack Post",
  "description": "Post current page URL and comment to Slack via bot token.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://slack.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
