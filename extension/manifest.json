{
  "manifest_version": 3,
  "name": "Slack Post",
  "description": "Post current page URL and comment to Slack via bot token.",
  "version": "0.7.2",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://slack.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon/icon_16.png",
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  }
}
